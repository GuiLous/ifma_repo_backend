// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  password   String
  fullName   String
  email      String   @unique
  isAdmin    Boolean  @default(false)
  isAdvisor  Boolean  @default(false)
  created_at DateTime @default(now())

  users_Token Users_Token[]
  Monograph   Monograph[]

  @@map("user")
}

model Users_Token {
  id            String   @id @default(uuid())
  refresh_token String
  user_id       String
  expires_date  DateTime
  created_at    DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("users_token")
}

model Monograph {
  id                     String   @id @default(uuid())
  title                  String
  authors                String
  authors_emails         String?
  advisor                String
  advisor_lattes         String?
  published_date         DateTime
  published_local        String
  resumo                 String
  palavras_chave         String
  keyWords               String
  number_pages           Int
  pdf_url                String?
  verified               Boolean  @default(false)
  comments_if_not_accept String?
  knowledge_id           String
  course_id              String
  user_id                String
  created_at             DateTime @default(now())

  knowledge_area Knowledge_Area @relation(fields: [knowledge_id], references: [id], onDelete: SetNull, onUpdate: SetNull)
  course         Course         @relation(fields: [course_id], references: [id], onDelete: SetNull, onUpdate: SetNull)
  user           User           @relation(fields: [user_id], references: [id], onDelete: SetNull, onUpdate: SetNull)

  @@map("monograph")
}

model Knowledge_Area {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())

  monograph Monograph[]

  @@map("knowledge_area")
}

model Course {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())

  Monograph Monograph[]

  @@map("course")
}
